<div class="container">
  <div class="transitions-enabled" id="beers">
    <% @beers.each do |beer| %>
    <div class="box panel panel-default">
      <%= link_to (image_tag beer.beer_pic.url(:medium)), beer_path(beer) %>
      <div class="panel-body">
        <%= beer.title %>
      </div>
    </div>
    <% end %>
    <%= will_paginate @beer, renderer: BootstrapPagination::Rails %>
  </div>
</div>