<div class="container">

<p><%= image_tag @user.profilepic.url(:medium) %></p>
<p><%= @user.username %></p>
<p><%= @user.name %></p>
<p><%= @user.location %></p>
<div class="transitions-enabled" id="beers">
  <% @beers.each do |beer| %>
    <div class="box panel panel-default">
      <%= link_to (image_tag beer.beer_pic.url(:medium)), beer_path(beer) %>
      <div class="panel-body">
        <%= link_to beer.title, beer_path(beer) %>
        <% if (@user.username == current_user.username) %>
        <%= link_to "delete", beer, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
      </div>
  </div>
  <% end %>

  </div>
</div>